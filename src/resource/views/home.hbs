<table class="table">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Quantity</th>
        <th scope="col">Price</th>
        <th colspan="2" scope="col">Action</th>
    </tr>
    </thead>
    <tbody>

    {{#each product}}
    <tr>
        <th scope="row">{{addOne @index}}</th>
        <td><a href="http://localhost:3000/detail/{{_id}}">{{name}}</a></td>
        <td>{{{quantity}}}</td>
        <td>{{price}}</td>
        <td>
            <a class="btn btn-primary" href="#" role="button">Sửa</a>
        </td>
        <td>
            <a class="btn btn-primary" href="#" role="button">Xoá</a>
        </td>
    </tr>
    {{/each}}
    </tbody>
</table>